{
	"template" : "news-*",
	"settings": {
		"number_of_shards" : 1,
		"number_of_replicas" : 0,
		"analysis" : {
			"filter" : {
				"my_stop" : {
					"type" : "stop",
					"stopwords" : [ "_english_", "_french_" ]
				}
			},
			"analyzer" : {
				"html_text" : {
					"type" : "custom",
					"char_filter" : "html_strip",
					"tokenizer" : "standard",
					"filter" : [ "asciifolding", "lowercase", "my_stop" ]
				}
			}
		}
	},
	"mappings" : {
		"_default_" : {
			"properties" : {
				"timestamp" : {
					"type" : "date",
					"format" : "epoch_millis"
				}
			}
		},
		"tweets": {
			"properties" : {
				"userName" : {
					"type" : "keyword",
					"index": true
				},
				"text" : {
					"type" : "text",
					"fielddata" : true
				},
				"coordinates" : {
					"type" : "geo_point"
				},
				"hashtags" : {
					"type" : "text",
					"index" : true,
					"fielddata" : true
				},
				"userId" : {
					"type" : "keyword",
					"index" : false
				},
				"tweetId" : {
					"type" : "keyword"
				}
			}
		},
		"rssItems" : {
			"properties" : {
				"description" : {
					"type" : "text",
					"fielddata" : true,
					"analyzer" : "html_text"
				}
			}
		}
	}
}
