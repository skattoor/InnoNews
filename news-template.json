{
	"template" : "news-*",
	"settings": {
		"number_of_shards" : 1,
		"number_of_replicas" : 0
	},
	"mappings" : {
		"_default_" : {
			"properties" : {
				"timestamp" : {
					"type" : "date",
					"format" : "epoch_millis"
				}
			}
		},
		"tweets": {
			"properties" : {
				"userName" : {
					"type" : "keyword"
				},
				"text" : {
					"type" : "text"
				},
				"coordinates" : {
					"type" : "geo_point"
				}
			}
		},
		"rss" : {
			"properties" : {
				"description" : {
					"type" : "text",
					"fielddata" : true
				}
			}
		}
	}
}
